#include <Arduino.h>

const int tiltPin = 3;
const int buzzerPin = 5;
const int buzzerFreq = 1000;
const int redLED = 9;
const int blueLED = 7;
bool lastState = false;
int shakeCounter = 0;
unsigned long shakeTime = 600;
unsigned long lastShakeTime;

bool ledOn_FLAG = false;
unsigned long ledOnTime = shakeTime;
unsigned long ledStartTime;

void setup()
{
  Serial.begin(9600);
  Serial.println();
  Serial.println();
  pinMode(buzzerPin,OUTPUT);
  pinMode(tiltPin,INPUT);
  lastState = digitalRead(tiltPin);
  lastShakeTime = millis();

  pinMode(redLED,OUTPUT);
  pinMode(blueLED,OUTPUT);
  digitalWrite(redLED,LOW);
  digitalWrite(blueLED,HIGH);
  ledStartTime = millis();
}

void loop()
{
  if(lastState != digitalRead(tiltPin)){
    shakeCounter++;
    lastState = !lastState;
    Serial.print("+1\n");
    delay(25);
  }
  if(shakeCounter == 4){
    Serial.print("Shaked!\n");
    tone(buzzerPin,buzzerFreq,shakeTime/2);
    shakeCounter = 0;

    ledStartTime = millis();
    ledOn_FLAG = true;
    digitalWrite(redLED,HIGH);
    digitalWrite(blueLED,LOW);
  }
  if(millis() - lastShakeTime > shakeTime){
    shakeCounter = 0;
    lastShakeTime = millis();
    //Serial.print("Time up\n");
  }

  if(millis() - ledStartTime > ledOnTime && ledOn_FLAG){
    digitalWrite(redLED,LOW);
    digitalWrite(blueLED,HIGH);
  }

  lastState = digitalRead(tiltPin);
}
